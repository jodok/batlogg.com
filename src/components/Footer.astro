---
import SocialLinks from './SocialLinks.astro';
---

<footer class="border-t border-gray-100">
  <div class="footer-inner">
    <div class="footer-links">
      <a href="/about">About</a>
      <a href="/posts">Writing</a>
      <a href="mailto:jodok@batlogg.com">Contact</a>
    </div>

    <SocialLinks class="footer-social" />

    <div class="footer-license">
      <a href="https://creativecommons.org/licenses/by-nc-sa/4.0/" target="_blank" rel="noreferrer" class="license-link">
        <svg width="16" height="16" viewBox="0 0 24 24" fill="currentColor"><path d="M12 0C5.373 0 0 5.373 0 12s5.373 12 12 12 12-5.373 12-12S18.627 0 12 0zm0 1.5c5.799 0 10.5 4.701 10.5 10.5S17.799 22.5 12 22.5 1.5 17.799 1.5 12 6.201 1.5 12 1.5zm-1.8 7.2c-.72 0-1.296.24-1.728.72-.432.48-.648 1.14-.648 1.98 0 .84.216 1.5.648 1.98.432.48 1.008.72 1.728.72.48 0 .888-.108 1.224-.324.336-.216.588-.528.756-.936l-1.08-.48c-.168.384-.468.576-.9.576-.312 0-.564-.12-.756-.36s-.288-.576-.288-1.008c0-.432.096-.768.288-1.008s.444-.36.756-.36c.432 0 .732.192.9.576l1.08-.48c-.168-.408-.42-.72-.756-.936-.336-.216-.744-.324-1.224-.324zm5.4 0c-.72 0-1.296.24-1.728.72-.432.48-.648 1.14-.648 1.98 0 .84.216 1.5.648 1.98.432.48 1.008.72 1.728.72.48 0 .888-.108 1.224-.324.336-.216.588-.528.756-.936l-1.08-.48c-.168.384-.468.576-.9.576-.312 0-.564-.12-.756-.36s-.288-.576-.288-1.008c0-.432.096-.768.288-1.008s.444-.36.756-.36c.432 0 .732.192.9.576l1.08-.48c-.168-.408-.42-.72-.756-.936-.336-.216-.744-.324-1.224-.324z"/></svg>
        CC BY-NC-SA 4.0
      </a>
    </div>
  </div>
</footer>

<style>
  .footer-inner {
    max-width: 750px;
    margin: 0 auto;
    padding: 2rem 1.5rem;
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    align-items: center;
    gap: 1rem;
    font-size: 0.75rem;
    color: #9ca3af;
  }

  .footer-links {
    display: flex;
    gap: 1.5rem;
  }

  .footer-links a {
    transition: color 0.15s;
  }

  .footer-links a:hover {
    color: #4b5563;
  }

  .footer-social :global(a) {
    color: #9ca3af;
  }

  .footer-social :global(a:hover) {
    color: #4b5563;
  }

  .license-link {
    display: inline-flex;
    align-items: center;
    gap: 0.35rem;
    transition: color 0.15s;
  }

  .license-link:hover {
    color: #4b5563;
  }
</style>
