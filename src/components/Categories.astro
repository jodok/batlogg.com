---
const { categories } = Astro.props;
---
{
    categories && (
        <div class="categories">
            {categories.map((category: string) => (
                <a href={`/category/${encodeURIComponent(category)}`}>#{category}</a>
            ))}
        </div>
    )
}
<style>
    div {
        display: flex;
        gap: 0.45rem;
        flex-wrap: wrap;
        margin: 0 0 0.75rem;
    }
    a {
        padding: 0.1rem 0.45rem;
        border-radius: 999px;
        white-space: nowrap;
        text-decoration: none;
        background: #eceef1;
        border: 1px solid #d7dbe2;
        color: #4f5561;
        font-size: 0.82rem;
        line-height: 1.25;
    }
</style>