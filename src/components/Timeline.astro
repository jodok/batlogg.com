---
interface TimelineEntry {
  period: string;
  title: string;
  description: string;
}

interface Props {
  entries: TimelineEntry[];
}

const { entries } = Astro.props;
---

<div class="border-t border-gray-100 pt-10 mb-16">
  <p class="text-xs font-medium text-gray-400 uppercase tracking-widest mb-8">Journey</p>
  {entries.map((entry) => (
    <div class="timeline-item">
      <p class="text-xs text-gray-400 mb-1">{entry.period}</p>
      <h3 class="font-semibold text-base mb-1">{entry.title}</h3>
      <p class="text-gray-500 text-sm leading-relaxed">{entry.description}</p>
    </div>
  ))}
</div>
