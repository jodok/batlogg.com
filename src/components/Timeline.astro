---
interface TimelineEntry {
  period: string;
  title: string;
  description: string;
}

interface Props {
  entries: TimelineEntry[];
}

const { entries } = Astro.props;
---

<div class="border-t border-gray-100 pt-10 mb-16">
  <p class="text-xs font-medium text-gray-400 uppercase tracking-widest mb-8">Journey</p>
  {entries.map((entry) => (
    <div class="timeline-item">
      <p class="text-xs text-gray-400 mb-1">{entry.period}</p>
      <h3 class="font-semibold text-base mb-1">{entry.title}</h3>
      <p class="text-gray-500 text-sm leading-relaxed">{entry.description}</p>
    </div>
  ))}
</div>

<style>
  .timeline-item {
    position: relative;
    padding-left: 2rem;
    padding-bottom: 2rem;
  }
  .timeline-item::before {
    content: '';
    position: absolute;
    left: 0;
    top: 0.5rem;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: #7CC745;
  }
  .timeline-item::after {
    content: '';
    position: absolute;
    left: 4px;
    top: 1.25rem;
    width: 2px;
    height: calc(100% - 1rem);
    background: #E8E8E8;
  }
  .timeline-item:last-child::after { display: none; }
  :global(.dark) .timeline-item::after { background: #333; }
</style>
